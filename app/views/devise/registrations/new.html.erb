<h2>Criar conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.email_field :name, autofocus: true, placeholder: 'Nome' %>
  </div>

  <div class="field mb-2">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email'%>
  </div>

  <div class="field mb-2">
    <% if @minimum_password_length %>
    <em>No m√≠nimo <%= @minimum_password_length %> caracteres </em>
    <% end %><br />
    <%= f.password_field :password, placeholder: 'Nova senha' %>
  </div>

  <div class="field mb-2">
    <%= f.password_field :password_confirmation, placeholder: 'Confirmar nova senha' %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastre-se", class: "text-white font-bold bg-cyan-800 py-2 px-4 rounded hover:bg-cyan-600 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
