<h2>Editar perfil de <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <i>(Deixe em branco se não quise alterar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nova senha" %>
    <% if @minimum_password_length %>
      <br />
      <em>No mínimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar nova senha"%>
  </div>

  <div class="field">
    <i>(Digite a senha atual para completar a alteração)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Senha atual"%>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<div class="mb-3">Não está satisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Deseja continuar?", turbo_confirm: "Deseja continuar?" }, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded"%></div>

<%= link_to "Voltar ->", :back, class: "no-underline" %>
