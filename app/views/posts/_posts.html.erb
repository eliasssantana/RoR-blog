<% @posts.each do |post| %>
  </br>
  <div class="bg-gray-300 shadow-md rounded-lg px-4 py-2 mb-2">
    <h2 class="text-white	text-xl font-bold mb-2">
      <%= link_to post.title, post, class: "no-underline" %>
    </h2>

    <p class: "text-slate-100 mb-4">
      <%= truncate(post.content, length: 104, separator: '') %>
    </p>

    <p class="text-gray-700 mb-2"> 
      <strong>Por:</strong>
      <% if post.user.name? %>
        <%= post.user.name %>
      <% else %>
        Anônimo
      <% end %>
    </p>
    <div class="text-gray-500">
          <p><%= post.comments.count %> comentários</p>
    </div>
  </div>

<% end %>

<div class="my-10">
<%== pagy_nav(@pagy) %>
</div>